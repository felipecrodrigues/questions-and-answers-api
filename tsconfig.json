{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "entities": [
     "src/domain/entities/*.ts"
  ],
  "migrations": [
     "src/infra/migrations/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
